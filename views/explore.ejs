<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Explore Gardens</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <script src="https://unpkg.com/gsap@3.12.2/dist/gsap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.min.js"></script>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <div class="background"></div>
  
  <div data-scroll-container class="container">
    <h1 data-scroll data-scroll-speed="1" class="page-title">EXPLORE</h1>
    <a href="/" class="nav-link">RETURN HOME</a>
    
    <div class="search-container">
      <form action="/explore" method="GET" class="search-bar">
        <input type="text" name="searchTerm" placeholder="Search for gardens...">
        <button type="submit" class="search-btn"><i class="fas fa-search"></i></button>
      </form>
    </div>
    
    <% if (gardens && gardens.length > 0) { %>
      <div data-scroll data-scroll-speed="0.3" class="garden-grid">
        <% gardens.forEach((garden, index) => { %>
          <div class="garden-card" data-index="<%= index %>">
            <div class="garden-preview">
              <i class="fas fa-seedling fa-3x"></i>
            </div>
            <div class="garden-name"><%= garden.gardenName %></div>
            <div class="garden-info">by <%= garden.owner %></div>
            <div class="garden-info"><%= garden.createdAt %></div>
            <div class="garden-actions">
              <a href="/garden/<%= garden._id %>" class="btn">VISIT</a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="no-gardens">
        <p>No gardens found. <a href="/">Create one?</a></p>
      </div>
    <% } %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize Locomotive Scroll
      const scroll = new LocomotiveScroll({
        el: document.querySelector('[data-scroll-container]'),
        smooth: true,
        multiplier: 0.8
      });
      
      // GSAP animations
      gsap.to('.page-title', {
        opacity: 1,
        y: 0,
        duration: 2,
        delay: 0.5,
        ease: 'power3.out'
      });
      
      gsap.to('.nav-link', {
        opacity: 0.7,
        y: 0,
        duration: 1.5,
        delay: 0.8,
        ease: 'power3.out'
      });
      
      gsap.to('.search-container', {
        opacity: 1,
        y: 0,
        duration: 1.5,
        delay: 1,
        ease: 'power3.out'
      });
      
      // No gardens animation
      if (document.querySelector('.no-gardens')) {
        gsap.to('.no-gardens', {
          opacity: 1,
          y: 0,
          duration: 1.5,
          delay: 1.2,
          ease: 'power3.out'
        });
      }
      
      // Garden grid animations
      if (document.querySelector('.garden-grid')) {
        gsap.to('.garden-grid', {
          opacity: 1,
          duration: 1.5,
          delay: 1.2,
          ease: 'power3.out'
        });
        
        gsap.to('.garden-card', {
          opacity: 1,
          y: 0,
          duration: 1.2,
          stagger: 0.15,
          delay: 1.5,
          ease: 'power3.out'
        });
      }
      
      // Refresh locomotive scroll after content loads
      setTimeout(() => {
        scroll.update();
      }, 3000);
    });
  </script>
</body>
</html>
