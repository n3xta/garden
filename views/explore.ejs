<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Explore Gardens</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <script src="https://unpkg.com/gsap@3.12.2/dist/gsap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body, html {
      height: 100%;
      width: 100%;
      background-color: #000;
      color: rgba(255, 255, 255, 0.9);
      font-family: "Cormorant Garamond", serif;
      overflow-x: hidden;
    }
    
    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background: url('/2dassets/garden_bg.png') no-repeat center center;
      background-size: cover;
      opacity: 0.7;
    }
    
    .container {
      position: relative;
      width: 100%;
      min-height: 100vh;
      padding: 10vh 8vw;
    }
    
    .page-title {
      font-size: 6vw;
      font-weight: 300;
      letter-spacing: 0.2em;
      margin-bottom: 8vh;
      opacity: 0;
      transform: translateY(40px);
      mix-blend-mode: difference;
    }
    
    .nav-link {
      position: absolute;
      top: 5vh;
      right: 8vw;
      font-size: 1vw;
      letter-spacing: 0.2em;
      text-decoration: none;
      color: rgba(255, 255, 255, 0.7);
      opacity: 0;
      transform: translateY(20px);
      padding-bottom: 0.5vh;
      overflow: hidden;
    }
    
    .nav-link::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 1px;
      background: rgba(255, 255, 255, 0.7);
      transition: width 0.5s;
    }
    
    .nav-link:hover::after {
      width: 100%;
    }
    
    .search-container {
      width: 100%;
      max-width: 600px;
      margin: 0 auto 5vh;
      position: relative;
      opacity: 0;
      transform: translateY(30px);
    }
    
    .search-bar {
      display: flex;
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .search-bar input {
      flex: 1;
      padding: 1.2vw;
      background: none;
      border: none;
      color: white;
      font-family: "Cormorant Garamond", serif;
      font-size: 1vw;
      letter-spacing: 0.1em;
    }
    
    .search-bar input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }
    
    .search-btn {
      background: none;
      border: none;
      padding: 0 1.5vw;
      color: rgba(255, 255, 255, 0.7);
      cursor: pointer;
      transition: all 0.3s;
    }
    
    .search-btn:hover {
      color: white;
    }
    
    .garden-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2vw;
      opacity: 0;
    }
    
    .garden-card {
      backdrop-filter: blur(5px);
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 2vw;
      transition: all 0.8s;
      opacity: 0;
      transform: translateY(20px);
    }
    
    .garden-card:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateY(-5px);
    }
    
    .garden-preview {
      height: 150px;
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(3px);
      margin-bottom: 1.5vw;
      display: flex;
      align-items: center;
      justify-content: center;
      color: rgba(255, 255, 255, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.05);
      transition: all 0.5s;
    }
    
    .garden-card:hover .garden-preview {
      color: rgba(255, 255, 255, 0.9);
    }
    
    .garden-name {
      font-size: 1.4vw;
      font-weight: 300;
      margin-bottom: 1vw;
      letter-spacing: 0.1em;
    }
    
    .garden-info {
      font-size: 0.8vw;
      color: rgba(255, 255, 255, 0.6);
      margin-bottom: 0.8vw;
      letter-spacing: 0.05em;
    }
    
    .garden-actions {
      margin-top: 1.5vw;
    }
    
    .btn {
      background: none;
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: white;
      padding: 0.8vw 1.5vw;
      font-family: "Cormorant Garamond", serif;
      font-size: 0.9vw;
      letter-spacing: 0.1em;
      cursor: pointer;
      transition: all 0.5s;
      text-decoration: none;
      display: inline-block;
    }
    
    .btn:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateY(-2px);
    }
    
    .no-gardens {
      text-align: center;
      padding: 5vw;
      font-size: 1.4vw;
      letter-spacing: 0.1em;
      opacity: 0;
      transform: translateY(30px);
    }
    
    .no-gardens a {
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.3);
      padding-bottom: 0.2vw;
      transition: all 0.3s;
    }
    
    .no-gardens a:hover {
      color: white;
      border-color: white;
    }
  </style>
</head>
<body>
  <div class="background"></div>
  
  <div data-scroll-container class="container">
    <h1 data-scroll data-scroll-speed="1" class="page-title">EXPLORE</h1>
    <a href="/" class="nav-link">RETURN HOME</a>
    
    <div class="search-container">
      <form action="/explore" method="GET" class="search-bar">
        <input type="text" name="searchTerm" placeholder="Search for gardens...">
        <button type="submit" class="search-btn"><i class="fas fa-search"></i></button>
      </form>
    </div>
    
    <% if (gardens && gardens.length > 0) { %>
      <div data-scroll data-scroll-speed="0.3" class="garden-grid">
        <% gardens.forEach((garden, index) => { %>
          <div class="garden-card" data-index="<%= index %>">
            <div class="garden-preview">
              <i class="fas fa-seedling fa-3x"></i>
            </div>
            <div class="garden-name"><%= garden.gardenName %></div>
            <div class="garden-info">by <%= garden.owner %></div>
            <div class="garden-info"><%= garden.createdAt %></div>
            <div class="garden-actions">
              <a href="/garden/<%= garden._id %>" class="btn">VISIT</a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="no-gardens">
        <p>No gardens found. <a href="/">Create one?</a></p>
      </div>
    <% } %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize Locomotive Scroll
      const scroll = new LocomotiveScroll({
        el: document.querySelector('[data-scroll-container]'),
        smooth: true,
        multiplier: 0.8
      });
      
      // GSAP animations
      gsap.to('.page-title', {
        opacity: 1,
        y: 0,
        duration: 2,
        delay: 0.5,
        ease: 'power3.out'
      });
      
      gsap.to('.nav-link', {
        opacity: 0.7,
        y: 0,
        duration: 1.5,
        delay: 0.8,
        ease: 'power3.out'
      });
      
      gsap.to('.search-container', {
        opacity: 1,
        y: 0,
        duration: 1.5,
        delay: 1,
        ease: 'power3.out'
      });
      
      // No gardens animation
      if (document.querySelector('.no-gardens')) {
        gsap.to('.no-gardens', {
          opacity: 1,
          y: 0,
          duration: 1.5,
          delay: 1.2,
          ease: 'power3.out'
        });
      }
      
      // Garden grid animations
      if (document.querySelector('.garden-grid')) {
        gsap.to('.garden-grid', {
          opacity: 1,
          duration: 1.5,
          delay: 1.2,
          ease: 'power3.out'
        });
        
        gsap.to('.garden-card', {
          opacity: 1,
          y: 0,
          duration: 1.2,
          stagger: 0.15,
          delay: 1.5,
          ease: 'power3.out'
        });
      }
      
      // Refresh locomotive scroll after content loads
      setTimeout(() => {
        scroll.update();
      }, 3000);
    });
  </script>
</body>
</html>
