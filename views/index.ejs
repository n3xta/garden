<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>The Garden is a Loop</title>
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/transition.css">
  
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
</head>
<body class="index-page">
  <div class="background full-page-bg" data-tilt data-tilt-max="1" data-tilt-speed="1" data-tilt-perspective="1000" data-tilt-scale="1" data-tilt-full-page-listening></div>
  <% if (user) { %>
    <div class="welcome-container">
      <div class="welcome-message parallax-item show" data-tilt data-tilt-max="10" data-tilt-speed="1" data-tilt-perspective="1000" data-tilt-scale="1.03">
        welcome, <span class="username"><%= user.username %></span>
      </div>
    </div>
  <% } else { %>
    <div class="letter-container">
      <img src="/img/letter.png" class="letter parallax-item" alt="Letter" data-tilt data-tilt-max="10" data-tilt-speed="1" data-tilt-perspective="1000" data-tilt-scale="1.03">
    </div>
  <% } %>
  
  <!-- Auth bookmarks -->
  <div class="auth-bookmarks">
    <% if (!user) { %>
      <!-- Login/Signup bookmarks (shown when logged out) -->
      <a href="/login" class="bookmark-link login-link">
        <img src="/img/login.png" class="bookmark login" alt="Login">
      </a>
      <a href="/register" class="bookmark-link signup-link">
        <img src="/img/signup.png" class="bookmark signup" alt="Sign Up">
      </a>
    <% } else { %>
      <!-- Logout bookmark (shown when logged in) -->
      <a href="/logout" class="bookmark-link logout-link">
        <img src="/img/logout.png" class="bookmark logout" alt="Logout">
      </a>
    <% } %>
  </div>
  
  <!-- Bookmarks in bottom right corner -->
  <% if (user) { %>
    <a href="/mygarden" data-transition="true">
      <img src="/img/your_garden.png" class="bookmark garden" alt="Your Garden">
    </a>
  <% } %>

  <a href="/explore" data-transition="true">
    <img src="/img/explore.png" class="bookmark explore" alt="Explore">
  </a>
  
  <!-- Transition Layer -->
  <div class="cd-transition-layer"> 
    <div class="bg-layer"></div>
  </div>
  
  <script src="/lib/vanilla-tilt.js"></script>
  <script src="/js/audio.js"></script>
  <script src="/js/main.js"></script>
  <script src="/js/transition.js"></script>
</body>
</html>
