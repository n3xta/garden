<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register - Music Garden</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <script src="https://unpkg.com/gsap@3.12.2/dist/gsap.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body, html {
      height: 100%;
      width: 100%;
      background-color: #000;
      color: rgba(255, 255, 255, 0.9);
      font-family: "Cormorant Garamond", serif;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background: url('/2dassets/main_bg.png') no-repeat center center;
      background-size: cover;
      opacity: 0.7;
    }
    
    .form-container {
      width: 90%;
      max-width: 500px;
      backdrop-filter: blur(10px);
      background: rgba(0, 0, 0, 0.3);
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 3rem;
      text-align: center;
      transform: translateY(30px);
      opacity: 0;
    }
    
    h1 {
      font-size: 2rem;
      font-weight: 300;
      letter-spacing: 0.2em;
      margin-bottom: 2rem;
      text-transform: uppercase;
    }
    
    .register-content-container {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    input {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      color: white;
      padding: 0.8rem;
      font-family: "Cormorant Garamond", serif;
      font-size: 1rem;
      letter-spacing: 0.1em;
      transition: all 0.3s;
    }
    
    input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }
    
    input:focus {
      outline: none;
      border-color: rgba(255, 255, 255, 0.3);
      background: rgba(255, 255, 255, 0.1);
    }
    
    .pfp-container {
      margin: 1.5rem 0;
    }
    
    .custom-file-upload {
      display: inline-block;
      padding: 0.8rem 1.5rem;
      cursor: pointer;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9rem;
      letter-spacing: 0.1em;
      transition: all 0.3s;
    }
    
    .custom-file-upload:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.3);
    }
    
    input[type="file"] {
      display: none;
    }
    
    .submit-btn {
      background: none;
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: white;
      padding: 0.8rem;
      cursor: pointer;
      font-family: "Cormorant Garamond", serif;
      font-size: 1rem;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      margin-top: 1rem;
      transition: all 0.5s;
    }
    
    .submit-btn:hover {
      background: rgba(255, 255, 255, 0.1);
    }
    
    .login-link {
      position: absolute;
      bottom: 2rem;
      left: 0;
      right: 0;
      text-align: center;
      font-size: 0.9rem;
      letter-spacing: 0.1em;
      color: rgba(255, 255, 255, 0.6);
      opacity: 0;
      transform: translateY(20px);
    }
    
    .login-link a {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.3);
      padding-bottom: 0.2rem;
      transition: all 0.3s;
    }
    
    .login-link a:hover {
      color: white;
      border-color: white;
    }
    
    .home-link {
      position: absolute;
      top: 2rem;
      right: 2rem;
      color: rgba(255, 255, 255, 0.6);
      text-decoration: none;
      font-size: 0.9rem;
      letter-spacing: 0.1em;
      opacity: 0;
      transform: translateY(20px);
      padding-bottom: 0.2rem;
      overflow: hidden;
    }
    
    .home-link::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 1px;
      background: rgba(255, 255, 255, 0.6);
      transition: width 0.5s;
    }
    
    .home-link:hover::after {
      width: 100%;
    }
  </style>
</head>

<body>
  <div class="background"></div>
  
  <a href="/" class="home-link">RETURN HOME</a>
  
  <div class="form-container">
    <h1>Create Account</h1>
    <form method="POST" action="/signup" enctype="multipart/form-data">
      <div class="register-content-container">
        <input type="text" name="fullname" placeholder="your full name" class="login-full-name">
        <input type="text" name="username" placeholder="choose a username" class="login-username">
        <input type="password" name="password" placeholder="choose a password" class="login-password">
        
        <div class='pfp-container'>
          <label for="fileUpload" class="custom-file-upload">select profile picture</label>
          <input type="file" id="fileUpload" name="profilePicture">
        </div>
        
        <input type="submit" name="submitbutton" value="join" class="submit-btn">
      </div>
    </form>
  </div>
  
  <div class="login-link">
    Already have an account? <a href="/login">Login here</a>
  </div>
  
  <script>
    // GSAP animations
    gsap.to('.form-container', {
      opacity: 1,
      y: 0,
      duration: 1.5,
      delay: 0.5,
      ease: 'power3.out'
    });
    
    gsap.to('.login-link', {
      opacity: 1,
      y: 0,
      duration: 1.2,
      delay: 1,
      ease: 'power3.out'
    });
    
    gsap.to('.home-link', {
      opacity: 1,
      y: 0,
      duration: 1.2,
      delay: 0.8,
      ease: 'power3.out'
    });
    
    // File upload name display
    document.getElementById('fileUpload').addEventListener('change', function() {
      const fileName = this.files[0]?.name;
      const label = document.querySelector('.custom-file-upload');
      
      if (fileName) {
        label.textContent = fileName;
      } else {
        label.textContent = 'select profile picture';
      }
    });
  </script>
</body>
</html>